                            <layoutData>
                                <l:GridData span="L6 M6"></l:GridData>
                            </layoutData>
                        </Label>
                        <Input />
                        <Label text="Employee Phone No." class="sapUiTinyMarginTop">
                            <layoutData>
                                <l:GridData span="L3 M3"></l:GridData>
                            </layoutData>
                        </Label>
                        <Input />
                    </l:content>
                </l:Grid>
            </Panel>
        </content>
    </Page>
